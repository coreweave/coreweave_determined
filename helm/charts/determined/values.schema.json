{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
      "region": {
        "type": "string",
        "enum": [
          "ORD1",
          "LAS1",
          "LGA1"
        ],
        "form": true,
        "title": "Region",
        "customComponent": {
          "id": "region_selector",
          "component": "RegionSelector"
        }
      },
      "defaultScheduler": {
        "type": "string",
        "enum": [
          "default-scheduler",
          "coscheduler"
        ],
        "form": true,
        "title": "Scheduler",
        "description": "Default Scheduler type for experiments and notebooks, can be overriden in experiment configuration. The standard scheduler is good for most use cases, however large distributed training jobs will want to use coscheduler to allow jobs to queue when resources to run all jobs in parallel are not available."
      },
      "resources": {
        "type": "object",
        "title": "Default Resources",
        "description": "Experiments will launch with these resource assignments by default. GPU type, CPU and Memory request can be overridden in the experiment configuration.",
        "form": true,
        "properties": {
          "resourcePool": {
            "type": "string",
            "enum": [
              "RTX_A5000",
              "RTX_A6000",
              "A100_NVLINK",
              "A100_NVLINK_80GB",
              "H100_NVLINK_80GB",
              "A40"
            ],
            
            "form": true,
            "title": "GPU Resource Pool"
          }
        }
      },
      "s3": {
        "type": "object",
        "form": "true",
        "title": "Object Storage Configuration",
        "required": [
          "bucket",
          "accessKey",
          "secretKey",
          "region"
        ],
        "properties": {
          "bucket": {
            "type": "string",
            "form": "true", 
            "title": "Bucket Name",
            "description": "Object Storage bucket used for storage of model checkpoints and optionally for training data"
          },
          "accessKey": {
            "type": "string",
            "form": "true", 
            "title": "Access Key",
            "description": "Access Key for Object Storage"
          },
          "secretKey": {
            "type": "string",
            "form": "true", 
            "title": "Secret Key",
            "description": "Secret Key for Object Storage"
          },
          "region": {
            "type": "string",
            "form": "true",
            "title": "Region",
            "enum": [
              "ORD1",
              "LAS1",
              "LGA1"
            ],
            "description": "CoreWeave Region where Object Storage bucket is located"
          }
        }
      },
      "mounts": {
        "type": "array",
        "title": "Experiment Mounts",
        "form": true,
        "customComponent": {
          "id": "mount_selector",
          "component": "MountSelector",
          "description": "Attach existing shared filesystem volumes to experiments by default. Volumes can be created in the Cloud Dashboard.",
          "title": "Default Filesystem Volumes",
          "mountPathPrefix": "/mnt/",
          "allowedVolumeModes": [
            "Filesystem"
          ]
        }
      }
    },
    "title": "Values",
    "type": "object"
  }