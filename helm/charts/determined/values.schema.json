{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
      "region": {
        "type": "string",
        "enum": [
          "ORD1",
          "LAS1",
          "LGA1"
        ],
        "form": true,
        "title": "Region",
        "customComponent": {
          "id": "region_selector",
          "component": "RegionSelector"
        }
      },
      "resources": {
        "type": "object",
        "title": "Default Resources",
        "form": true,
        "properties": {
          "cpu": {
            "type": "string",
            "form":"true",
            "title": "vCPU Request",
            "description": "Amount of CPU to provide",
            "render":"slider",
            "sliderMin": 1,
            "sliderMax": 128,
            "sliderUnit": "vCPUs"
          },
          "memory": {
              "type": "string",
              "form":"true",
              "title": "Memory Request",
              "description": "Amount of Memory to provide",
              "render":"slider",
              "sliderMin": 4,
              "sliderMax": 1000,
              "sliderUnit": "Gi"
          },
          "gpu_type": {
            "type": "string",
            "enum": [
              "RTX_A4000",
              "RTX_A5000",
              "RTX_A6000",
              "A100_NVLINK",
              "A100_NVLINK_80GB",
              "A100_PCIE_40GB",
              "A100_PCIE_80GB",
              "A40",
              "Tesla_V100_NVLINK",
              "Quadro_RTX_5000",
              "Quadro_RTX_4000"
            ],
            "form": true,
            "title": "GPU Type",
            "description": "Please select the default GPU type for your workloads."
          }
        }
      },
      "s3": {
        "type": "object",
        "form": "true",
        "title": "S3 Configuration",
        "properties": {
          "bucket": {
            "type": "string",
            "form": "true", 
            "title": "Bucket Name",
            "description": "S3 is used for storage of model checkpoints and optionally for training data."
          },
          "accessKey": {
            "type": "string",
            "form": "true", 
            "title": "Access Key",
            "description": "Access Key for S3"
          },
          "secretKey": {
            "type": "string",
            "form": "true", 
            "title": "Secret Key",
            "description": "Secret Key for S3"
          },
          "storageSize": {
            "type": "string",
            "form": "true", 
            "title": "S3 Storage Size",
            "description": "S3 Checkpoint/Training Data Storage Size",
            "render":"slider",
            "sliderMin": 10,
            "sliderMax": 1000,
            "sliderUnit": "Gi"
            }
        }
      }
    },
    "title": "Values",
    "type": "object"
  }